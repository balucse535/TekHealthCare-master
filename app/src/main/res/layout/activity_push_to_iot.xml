<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#5EB593"
    tools:context=".UserActions">

    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/healthlogo"
            android:layout_gravity="top"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="31dp"
        android:layout_height="31dp"/>

    <EditText
        android:id="@+id/deviceID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the Device ID"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/heartRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the Heart Rate"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/stepData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the step count"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/deviceButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Push Data"
        android:background="#A9B686"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="215dp" />
    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/devID"
        android:textStyle="bold"/>

    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tekLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/teksystemslogo" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="20dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"/>



</LinearLayout>