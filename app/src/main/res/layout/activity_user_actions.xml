<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#5EB593"
    tools:context=".UserActions">

    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/healthlogo"
            android:layout_gravity="top"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="31dp"
        android:layout_height="31dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="What you want to do?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="left"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075" />
    <FrameLayout
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <Button
        android:id="@+id/Device"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Register your Device"
        android:background="#D7809F"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="215dp" />
    <Button
        android:id="@+id/IoTHUB"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Push data to IoT HUB"
        android:background="#A9B686"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="215dp" />
    <FrameLayout
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tekLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/teksystemslogo" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="20dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"/>



</LinearLayout>